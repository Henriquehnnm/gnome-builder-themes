<?xml version="1.0" encoding="UTF-8"?>
<!-- Oxocarbon Pastel Light Theme - Fundo original, sintaxe pastel -->
<style-scheme id="oxocarbon-pastel-light" name="Oxocarbon Pastel Light" version="1.0">
  <metadata>
    <property name="variant">light</property>
    <property name="dark-variant">oxocarbon-pastel-dark</property>
    <property name="terminal-palette">oxocarbon-pastel-light</property>
  </metadata>

  <!-- Fundo igual ao original -->
  <color name="Foreground" value="#21272a"/>
  <color name="Background" value="#f2f4f8"/>
  <color name="Cursor" value="#a3c9ff"/>
  <color name="Gutter" value="#f2f4f8"/>
  <color name="CurrentLine" value="#dde1e6"/>
  <color name="Color0" value="#f2f4f8"/>
  <color name="Color1" value="#dde1e6"/>
  <color name="Color2" value="#c1c7cd"/>
  <color name="Color3" value="#878d96"/>
  <color name="Color4" value="#697077"/>
  <color name="Color5" value="#21272a"/>
  <color name="Color6" value="#161616"/>
  <!-- Sintaxe pastel -->
  <color name="Color7" value="#a8e6cf"/>
  <color name="Color8" value="#b2ebf2"/>
  <color name="Color9" value="#b3cfff"/>
  <color name="Color10" value="#f7a8b8"/>
  <color name="Color11" value="#a7c7e7"/>
  <color name="Color12" value="#f7b2d9"/>
  <color name="Color13" value="#b7e7c7"/>
  <color name="Color14" value="#d1b3ff"/>
  <color name="Color15" value="#b3e5fc"/>

  <!-- Estilos bÃ¡sicos -->
  <style name="text" background="Background" foreground="Foreground"/>
  <style name="cursor" foreground="Cursor"/>
  <style name="search-match" background="Color10" foreground="Background"/>
  <style name="line-numbers" background="Background" foreground="#878d96"/>
  <style name="current-line" background="CurrentLine"/>
  <style name="current-line-number" background="CurrentLine" foreground="#21272a"/>
  <style name="right-margin" foreground="Foreground" background="Gutter"/>

  <!-- Estilos de sintaxe pastel -->
  <style name="def:base-n-integer" foreground="Color14"/>
  <style name="def:boolean" foreground="Color13"/>
  <style name="def:character" foreground="Color12"/>
  <style name="def:comment" foreground="#b2ebf2"/>
  <style name="def:doc-comment-element" bold="true"/>
  <style name="def:constant" foreground="Color14"/>
  <style name="def:decimal" foreground="Color14"/>
  <style name="def:error" underline="error" underline-color="Color10"/>
  <style name="def:floating-point" foreground="Color14"/>
  <style name="def:keyword" foreground="Color10"/>
  <style name="def:net-address" foreground="Color9" underline="low"/>
  <style name="def:function" foreground="Color9"/>
  <style name="def:number" foreground="Color14"/>
  <style name="def:preprocessor" foreground="Color12"/>
  <style name="def:special-char" foreground="Color9"/>
  <style name="def:string" foreground="Color11"/>
  <style name="def:strong-emphasis" bold="true"/>
  <style name="def:identifier" foreground="Color13"/>
  <style name="def:type" foreground="Color13"/>

</style-scheme> 