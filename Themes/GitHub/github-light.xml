<?xml version="1.0" encoding="UTF-8"?>
<!-- GitHub Light Theme - Baseado no tema moderno do GitHub -->
<style-scheme id="github-light" name="GitHub Light" version="1.0">
  <metadata>
    <property name="variant">light</property>
    <property name="dark-variant">github-dark</property>
    <property name="terminal-palette">github-light</property>
  </metadata>

  <color name="Foreground" value="#24292f"/>
  <color name="Background" value="#ffffff"/>
  <color name="Cursor" value="#0969da"/>
  <color name="Gutter" value="#f6f8fa"/>
  <color name="CurrentLine" value="#f6f8fa"/>
  <color name="Color0" value="#ffffff"/>
  <color name="Color1" value="#cf222e"/>
  <color name="Color2" value="#116329"/>
  <color name="Color3" value="#9a6700"/>
  <color name="Color4" value="#0969da"/>
  <color name="Color5" value="#8250df"/>
  <color name="Color6" value="#1b1f234d"/>
  <color name="Color7" value="#24292f"/>
  <color name="Color8" value="#656d76"/>
  <color name="Color9" value="#a40e26"/>
  <color name="Color10" value="#1a7f37"/>
  <color name="Color11" value="#9a6700"/>
  <color name="Color12" value="#0969da"/>
  <color name="Color13" value="#8250df"/>
  <color name="Color14" value="#1b1f234d"/>
  <color name="Color15" value="#24292f"/>

  <style name="text" background="Background" foreground="Foreground"/>
  <style name="cursor" foreground="Cursor"/>
  <style name="search-match" background="Color3" foreground="Background"/>
  <style name="line-numbers" background="Background" foreground="#8b949e"/>
  <style name="current-line" background="CurrentLine"/>
  <style name="current-line-number" background="CurrentLine" foreground="#24292f"/>
  <style name="right-margin" foreground="Foreground" background="Gutter"/>

  <style name="def:base-n-integer" foreground="Color5"/>
  <style name="def:boolean" foreground="Color2"/>
  <style name="def:character" foreground="Color6"/>
  <style name="def:comment" foreground="#656d76"/>
  <style name="def:doc-comment-element" bold="true"/>
  <style name="def:constant" foreground="Color5"/>
  <style name="def:decimal" foreground="Color5"/>
  <style name="def:error" underline="error" underline-color="Color1"/>
  <style name="def:floating-point" foreground="Color5"/>
  <style name="def:keyword" foreground="Color1"/>
  <style name="def:net-address" foreground="Color4" underline="low"/>
  <style name="def:function" foreground="Color4"/>
  <style name="def:number" foreground="Color5"/>
  <style name="def:preprocessor" foreground="Color6"/>
  <style name="def:special-char" foreground="Color4"/>
  <style name="def:string" foreground="Color3"/>
  <style name="def:strong-emphasis" bold="true"/>
  <style name="def:identifier" foreground="Color2"/>
  <style name="def:type" foreground="Color5"/>

</style-scheme> 